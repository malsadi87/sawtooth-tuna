{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {"include": "**/*.hbs", "outDir": "./dist/emailTemplates", "watchAssets": true },
      {"include": "../config/*.yaml", "outDir": "./dist/config", "watchAssets": true }
    ]
  }
}
